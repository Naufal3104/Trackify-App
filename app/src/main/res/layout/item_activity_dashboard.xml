<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_activity_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_run"
            app:tint="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lari Pagi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_activity_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 km - 30 menit"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_activity_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 50 Poin"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/design_default_color_primary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
