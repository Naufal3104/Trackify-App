<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F8"
    tools:context=".UserProfileActivity"> <View
    android:id="@+id/header_view"
    android:layout_width="0dp"
    android:layout_height="320dp"
    android:background="#1ABC9C"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/sym_def_app_icon"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lorem"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_card" />
    <TextView
        android:id="@+id/text_user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surabaya, Indonesia"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_user_name" />

    <LinearLayout
        android:id="@+id/stats_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_user_location">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_directions" app:tint="#FFFFFF"/>
            <TextView android:id="@+id/text_total_jarak" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24.8Km" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Jarak" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/btn_star_big_on" app:tint="#FFFFFF"/>
            <TextView android:id="@+id/text_total_poin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="320" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Poin" android:textColor="#FFFFFF" android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@id/header_view"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:cardCornerRadius="16dp" app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:padding="16dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Aktivitas Saya" android:textColor="#000000" android:textSize="18sp" android:textStyle="bold" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="Pengaturan" android:textColor="#000000" android:textSize="18sp" android:textStyle="bold" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_tukar_poin"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="12dp" android:gravity="center_vertical|start"
                        android:text="Tukar Poin" android:textAllCaps="false" android:textColor="#000000" app:icon="@android:drawable/ic_menu_save"
                        app:iconPadding="16dp" app:iconTint="#1ABC9C" app:strokeColor="#DDDDDD"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_voucher_saya"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="8dp" android:gravity="center_vertical|start"
                        android:text="Voucher Saya" android:textAllCaps="false" android:textColor="#000000" app:icon="@android:drawable/ic_menu_share"
                        app:iconPadding="16dp" app:iconTint="#1ABC9C" app:strokeColor="#DDDDDD"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_keluar"
                android:layout_width="match_parent" android:layout_height="60dp"
                android:layout_marginTop="16dp" android:text="Keluar"
                android:textSize="16sp" app:backgroundTint="#E53935" app:cornerRadius="16dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:menu="@menu/bottom_nav_user"
        app:labelVisibilityMode="labeled"/>

</androidx.constraintlayout.widget.ConstraintLayout>